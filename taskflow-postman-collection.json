  "item": [

    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    },

    {
      "name": "Teams",
      "item": [
        {
          "name": "Create Team",
          "request": {
            "auth": { "type": "bearer", "bearer": [ { "value": "{{token}}", "type": "string" } ] },
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Development Team\",\n  \"members\": [\n    { \"name\": \"Amit Yadav\", \"email\": \"amit@example.com\" },\n    { \"name\": \"Rohit Sharma\", \"email\": \"rohit@example.com\" }\n  ]\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "http://localhost:3000/teams",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["teams"]
            }
          }
        },

        {
          "name": "Add Member to Team",
          "request": {
            "auth": { "type": "bearer", "bearer": [ { "value": "{{token}}", "type": "string" } ] },
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Karan Kumar\",\n  \"email\": \"karan@example.com\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "http://localhost:3000/teams/{{teamId}}/members",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["teams", "{{teamId}}", "members"]
            }
          }
        },

        {
          "name": "Get All Teams",
          "request": {
            "auth": { "type": "bearer", "bearer": [ { "value": "{{token}}", "type": "string" } ] },
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/teams",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["teams"]
            }
          }
        },

        {
          "name": "Get Team By ID",
          "request": {
            "auth": { "type": "bearer", "bearer": [ { "value": "{{token}}", "type": "string" } ] },
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/teams/{{teamId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["teams", "{{teamId}}"]
            }
          }
        }
      ]
    },

    {
