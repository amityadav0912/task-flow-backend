            "method": "DELETE",
            "url": {
              "raw": "http://localhost:3000/tasks/{{taskId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["tasks", "{{taskId}}"]
            }
          }
        }
      ]
    }
